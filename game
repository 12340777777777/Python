#random input number
import random
answer = random.randint(1,10)
print("Please guess number between 1 and 10: ")
guess = int(input())
if guess == answer:
    print("you got it first time")
else:
    if guess < answer:
        print("please guess higher")
    else:
        print("please guess lower")
    guess = int(input())
    if guess == answer:
        print("correct")
    else:
        print("sorry, you have gussed wrong")

